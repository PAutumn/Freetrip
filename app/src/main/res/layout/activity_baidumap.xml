<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mv_mapview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
     <Button
        android:id="@+id/show_compass"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/map_icon_compass"
        android:onClick="show_compass" />

    <Button
        android:id="@+id/show_star"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/show_compass"
        android:background="@drawable/map_icon_satel"
        android:onClick="show_star" />

    <Button
        android:id="@+id/show_normal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/show_star"
        android:layout_marginTop="10dp"
        android:background="@drawable/map_icon_normally"
        android:onClick="normal" />
    

</RelativeLayout>