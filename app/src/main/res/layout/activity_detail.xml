<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#15bedb"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity=""
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="15dp"
                android:src="@drawable/icon_top_back" />

            <TextView
                android:id="@+id/tv_detail_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="#fff"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_tops"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/default_pic" >
            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:id="@+id/dot_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/vp_tops"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_want"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#3000"
                android:paddingLeft="5dp" 
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/iv_want"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/detail_haswant" />

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_want"
                    android:orientation="vertical"
                    android:paddingLeft="3dp" >

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:text="想去"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_want"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>

<!--             <View 
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:background="#fff"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:paddingBottom="5dp"
                android:layout_toRightOf="@id/rl_want"/> -->
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/rl_want"
                android:background="#3000"
                android:paddingLeft="5dp" 
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/iv_visited"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/detail_hasbeen" />

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_visited"
                    android:orientation="vertical"
                    android:paddingLeft="3dp" >

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:text="去过"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_visited"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_map"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingTop="5dp"
                android:src="@drawable/icon_location" />

            <TextView
                android:id="@+id/tv_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="35dp"
                android:text="百度地图"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:src="@drawable/ic_goto_map" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentBottom="true"
            android:background="#3C92F2"
            android:paddingTop="5dp" />

        <RelativeLayout
            android:id="@+id/rl_tel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingTop="5dp"
                android:src="@drawable/icon_tel" />

            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="35dp"
                android:text="电话号码"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:paddingRight="5dp"
                android:src="@drawable/share" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentBottom="true"
            android:background="#3C92F2"
            android:paddingTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <WebView
                android:id="@+id/wv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>