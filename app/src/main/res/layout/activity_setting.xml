<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ithmac="http://schemas.android.com/apk/res/com.freetrip.trekker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   
    
    <com.freetrip.trekker.widget.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        ithmac:desc_off="自动更新已经关闭"
        ithmac:desc_on="自动更新已经开启"
        ithmac:title="自动更新设置" />

    <com.freetrip.trekker.widget.SettingItemView
        android:id="@+id/siv_wifipic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ithmac:desc_off="智能无图已经关闭"
        ithmac:desc_on="智能无图已经开启"
        ithmac:title="智能无图" />

    <TextView
        android:id="@+id/tv_cleancache"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="10dp"
        android:onClick="btn_cleancache"
        android:text="缓存清理"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentBottom="true"
        android:background="#a000" />
    
    

</LinearLayout>